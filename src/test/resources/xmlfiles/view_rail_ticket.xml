<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.trainsplit.trainsplit.journeys.model.JourneyModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:id="@+id/relative_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_horizontal_grey_stripes">

            <RelativeLayout
                android:id="@+id/relative_bar_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_normal">

                <TextView
                    android:id="@+id/text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@{viewmodel.getPrice()}"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="£59.48" />

                <TextView
                    android:id="@+id/text_saving"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/text_price"
                    android:layout_alignTop="@+id/text_price"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/text_price"
                    android:layout_toStartOf="@+id/text_type"
                    android:gravity="center_vertical"
                    android:text="@{viewmodel.getSaving()}"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    tools:text="(Saved you £2.52)" />

                <TextView
                    android:id="@+id/text_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@{viewmodel.getType()}"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Return" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear_content_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_bar_top"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="16dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:paddingEnd="8dp"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/text_label_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/from"
                        android:textColor="@color/grey_mid_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_from_station"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_label_from"
                        android:layout_marginTop="8dp"
                        android:text="@{viewmodel.getFromStation().getNameForDisplay()}"
                        android:textColor="@color/grey_dark"
                        android:textSize="16sp"
                        tools:text="Brighton" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:paddingEnd="16dp"
                    android:paddingStart="8dp">

                    <TextView
                        android:id="@+id/text_label_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:layout_toStartOf="@+id/text_out_time"
                        android:text="@{viewmodel.getRtnTime() != null ? @string/outward : @string/dep}"
                        android:textColor="@color/grey_mid_dark"
                        android:textSize="14sp"
                        tools:text="@string/outward" />

                    <TextView
                        android:id="@+id/text_out_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="@{viewmodel.getOutTime()}"
                        android:textColor="@color/grey_dark"
                        android:textSize="16sp"
                        tools:text="11:48\n14/01/2017" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_content_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_content_1"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                android:paddingTop="12dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:paddingEnd="8dp"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/text_label_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/to"
                        android:textColor="@color/grey_mid_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_to_station"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_label_to"
                        android:layout_marginTop="8dp"
                        android:text="@{viewmodel.getToStation().getNameForDisplay()}"
                        android:textColor="@color/grey_dark"
                        android:textSize="16sp"
                        tools:text="Edinburgh" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:paddingEnd="16dp"
                    android:paddingStart="8dp">

                    <TextView
                        android:id="@+id/text_label_return"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:layout_toStartOf="@+id/text_return_time"
                        android:text="@{viewmodel.getRtnTime() != null ? @string/returnn : null}"
                        android:textColor="@color/grey_mid_dark"
                        android:textSize="14sp"
                        tools:text="@string/returnn" />

                    <TextView
                        android:id="@+id/text_return_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="@{viewmodel.getRtnTime()}"
                        android:textColor="@color/grey_dark"
                        android:textSize="16sp"
                        tools:text="12:48\n15/01/2017" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relative_bar_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_content_2"
                android:background="@color/blue_normal"
                android:visibility="visible"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/image_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_logo_word_white_85dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/image_logo"
                    android:layout_alignTop="@+id/image_logo"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/image_logo"
                    android:gravity="center_vertical"
                    android:text="@string/association_raileasy"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_bar_bottom_alternative"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/linear_content_2"
                android:background="@color/blue_normal"
                android:visibility="gone"
                tools:visibility="gone">

                <TextView
                    android:id="@+id/text_booking_reference_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:text="@string/label_booking_ref"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text_booking_reference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/text_booking_reference_label"
                    android:layout_toStartOf="@+id/text_single_return"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="@{viewmodel.getBookingReference()}"
                    tools:text="GB7YGJ24" />

                <TextView
                    android:id="@+id/text_single_return"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:text="@{viewmodel.getType()}"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Return" />

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>
