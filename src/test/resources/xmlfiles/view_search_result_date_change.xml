<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="64dp"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_divider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey_mid_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_day_1"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginEnd="2dp"
        android:layout_toStartOf="@+id/view_divider"
        android:gravity="bottom|center_horizontal"
        android:lines="1"
        android:textColor="@color/grey_dark"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_divider"
        app:layout_constraintEnd_toStartOf="@+id/view_divider"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Sun" />

    <TextView
        android:id="@+id/text_day_2"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="2dp"
        android:gravity="bottom|center_horizontal"
        android:lines="1"
        android:textColor="@color/grey_dark"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_divider"
        tools:text="Mon" />

</androidx.constraintlayout.widget.ConstraintLayout>
