<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        style="@style/App.Widget.AppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/App.Widget.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/title_confirmation" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/blue_light"
                app:layout_constraintBottom_toBottomOf="@+id/space_confirmation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/img_confetti_left"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/img_confetti_right"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/text_reference_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_start_1"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:gravity="center"
                android:text="@string/all_booked"
                android:textColor="@color/grey_dark"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_booking_reference_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_reference_title"
                android:layout_marginStart="@dimen/keyline_start_1"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:gravity="center"
                android:labelFor="@+id/text_booking_reference"
                android:text="@string/label_booking_reference"
                android:textColor="@color/grey_mid_dark"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_reference_title" />

            <TextView
                android:id="@+id/text_booking_reference"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_booking_reference_label"
                android:layout_marginStart="@dimen/keyline_start_1"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:gravity="center"
                android:textColor="@color/blue_dark"
                android:textSize="42sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_booking_reference_label"
                tools:text="GB6XNJ63" />

            <ImageView
                android:id="@+id/image_loading_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_start_1"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:tint="@color/blue_normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_booking_reference"
                app:srcCompat="@drawable/img_loading_line_240dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/text_reference_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_start_1"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:gravity="center"
                android:text="@string/booking_reference_info"
                android:textColor="@color/grey_dark"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_loading_line" />

            <Space
                android:id="@+id/space_confirmation"
                android:layout_width="0dp"
                android:layout_height="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_reference_info" />

            <ImageView
                android:id="@+id/image_my_journeys"
                android:layout_width="0dp"
                android:layout_height="112dp"
                android:alpha="0.4"
                android:scaleType="centerCrop"
                android:src="@drawable/img_journeys_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/space_confirmation"
                tools:ignore="ContentDescription" />

            <Button
                android:id="@+id/button_my_journeys"
                style="@style/ButtonStyle.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:text="@string/action_my_journeys"
                app:layout_constraintBottom_toBottomOf="@+id/image_my_journeys"
                app:layout_constraintEnd_toEndOf="@+id/image_my_journeys"
                app:layout_constraintStart_toStartOf="@+id/image_my_journeys"
                app:layout_constraintTop_toTopOf="@+id/image_my_journeys" />

            <TextView
                android:id="@+id/text_review"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_start_1"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:gravity="center_vertical"
                android:textColor="@color/grey_dark"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/button_review"
                app:layout_constraintEnd_toStartOf="@+id/button_review"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/button_review"
                tools:text="@string/leave_a_review" />

            <Button
                android:id="@+id/button_review"
                style="@style/ButtonStyle.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/action_review"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_my_journeys" />

            <View
                android:id="@+id/divider_1"
                style="@style/App.Widget.Divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_review" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_review"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:constraint_referenced_ids="text_review,button_review,divider_1" />

            <TextView
                android:id="@+id/text_summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_start_1"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:gravity="center"
                android:textColor="@color/blue_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_1"
                tools:text="Brighton > Edinburgh" />

            <TextView
                android:id="@+id/text_summary_line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_start_1"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:drawablePadding="8dp"
                android:textColor="@color/grey_dark"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_summary"
                tools:drawableStart="@drawable/ic_outward_arrow_grey_dark_18dp"
                tools:text="11:48 - 15:48   Sun 26 Nov" />

            <TextView
                android:id="@+id/text_summary_line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_start_1"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:drawableStart="@drawable/ic_return_arrow_grey_dark_18dp"
                android:drawablePadding="8dp"
                android:textColor="@color/grey_dark"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_summary_line1"
                tools:text="23:48 - 01:48   Mon 27 Nov" />

            <TextView
                android:id="@+id/text_summary_line3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_start_1"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:gravity="center"
                android:textColor="@color/grey_dark"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_summary_line2"
                tools:text="1 passenger" />

            <TextView
                android:id="@+id/text_summary_line4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_start_1"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:gravity="center"
                android:textColor="@color/grey_dark"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_summary_line3"
                tools:text="£63.36" />

            <View
                android:id="@+id/divider_2"
                style="@style/App.Widget.Divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_summary_line4" />

            <TextView
                android:id="@+id/text_title_collection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_start_1"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:drawableStart="@drawable/ic_ticket_paper_black_24dp"
                android:drawablePadding="8dp"
                android:drawableTint="@color/blue_dark"
                android:text="@string/title_tickets_collection"
                android:textColor="@color/blue_dark"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_2"
                tools:targetApi="m" />

            <TextView
                android:id="@+id/text_info_collection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_start_1"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:text="@string/info_tickets_collection"
                android:textColor="@color/grey_mid_dark"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_title_collection" />

            <Button
                android:id="@+id/button_help_collecting"
                style="@style/ButtonStyle.Link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/action_help_collecting"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_info_collection" />

            <View
                android:id="@+id/divider_3"
                style="@style/App.Widget.Divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_help_collecting" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_collection"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:constraint_referenced_ids="text_title_collection,text_info_collection,button_help_collecting,divider_3" />

            <TextView
                android:id="@+id/text_title_information"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_start_1"
                android:layout_marginEnd="16dp"
                android:layout_toStartOf="@+id/image_important_chevron"
                android:text="@string/label_important_information"
                android:textColor="@color/grey_dark"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/image_important_chevron"
                app:layout_constraintEnd_toStartOf="@+id/image_important_chevron"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/image_important_chevron" />

            <ImageView
                android:id="@+id/image_important_chevron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:src="@drawable/ic_expand_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_3"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/text_information"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_start_1"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:textColor="@color/grey_mid_dark"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_important_chevron"
                tools:text="@string/summary_info_non_advance"
                tools:visibility="visible" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_information"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="text_title_information,image_important_chevron,text_information" />

            <View
                android:id="@+id/background_information"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/divider_4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_3" />

            <View
                android:id="@+id/divider_4"
                style="@style/App.Widget.Divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/barrier_information" />

            <TextView
                android:id="@+id/text_title_tickets"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_start_1"
                android:layout_marginEnd="16dp"
                android:text="@string/label_your_tickets"
                android:textColor="@color/grey_dark"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/image_tickets_chevron"
                app:layout_constraintEnd_toStartOf="@+id/image_tickets_chevron"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/image_tickets_chevron" />

            <ImageView
                android:id="@+id/image_tickets_chevron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:src="@drawable/ic_expand_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_4"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/linear_container_tickets"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_tickets_chevron"
                tools:visibility="gone">

                <TextView
                    android:id="@+id/text_tickets_explained"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/keyline_start_1"
                    android:layout_marginEnd="@dimen/keyline_end_1"
                    android:layout_marginBottom="16dp"
                    android:text="@string/your_tickets_explained"
                    android:textColor="@color/grey_dark"
                    android:textSize="14sp"
                    tools:visibility="gone" />

                <View
                    android:id="@+id/divider_tickets"
                    style="@style/App.Widget.Divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/keyline_start_1"
                    tools:visibility="gone" />

                <LinearLayout
                    android:id="@+id/linear_tickets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    tools:minHeight="100dp" />

            </LinearLayout>

            <View
                android:id="@+id/background_tickets"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/divider_5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_4" />

            <View
                android:id="@+id/divider_5"
                style="@style/App.Widget.Divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linear_container_tickets" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/relative_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        tools:visibility="gone">

        <include
            android:id="@+id/layout_spinner"
            layout="@layout/view_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
