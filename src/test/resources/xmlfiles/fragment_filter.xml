<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        style="@style/App.Widget.AppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/App.Widget.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/title_filter" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/grey_light"
                app:layout_constraintBottom_toBottomOf="@+id/check_box_save"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/check_box_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_end_1"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:buttonTint="@color/filter_tint"
                android:layoutDirection="rtl"
                android:minHeight="48dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="@string/label_save_filter"
                android:textColor="@color/grey_dark"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/divider_1"
                style="@style/App.Widget.Divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/check_box_save" />

            <TextView
                android:id="@+id/text_label_filter_warning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:drawableStart="@drawable/ic_info_dark_24dp"
                android:drawablePadding="16dp"
                android:gravity="center_vertical"
                android:text="@string/label_filter_warning"
                android:textColor="@color/grey_dark"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_1" />

            <View
                android:id="@+id/divider_2"
                style="@style/App.Widget.Divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_label_filter_warning" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_filter_warning"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                app:constraint_referenced_ids="text_label_filter_warning,divider_2" />

            <CheckBox
                android:id="@+id/check_box_first_class"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_end_1"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:buttonTint="@color/filter_tint"
                android:drawableLeft="@drawable/ic_first_class_black_24dp"
                android:drawablePadding="16dp"
                android:layoutDirection="rtl"
                android:minHeight="48dp"
                android:text="@string/label_filter_first_class"
                android:textColor="@color/filter_tint"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_2"
                tools:drawableTint="@color/filter_tint"
                tools:ignore="RtlHardcoded" />

            <CheckBox
                android:id="@+id/check_box_flexible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_end_1"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:buttonTint="@color/filter_tint"
                android:drawableLeft="@drawable/ic_flexible_black_24dp"
                android:drawablePadding="16dp"
                android:layoutDirection="rtl"
                android:minHeight="48dp"
                android:text="@string/label_filter_flexible"
                android:textColor="@color/filter_tint"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/check_box_first_class"
                tools:drawableTint="@color/filter_tint"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/text_info_flexible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="48dp"
                android:text="@string/info_filter_flexible"
                android:textColor="@color/grey_dark"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/check_box_flexible"
                app:layout_constraintStart_toStartOf="@+id/check_box_flexible"
                app:layout_constraintTop_toBottomOf="@+id/check_box_flexible" />

            <View
                android:id="@+id/divider_3"
                style="@style/App.Widget.Divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_info_flexible" />

            <TextView
                android:id="@+id/text_label_advanced_options"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_start_1"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:text="@string/label_filter_advanced_options"
                android:textColor="@color/grey_dark"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_3" />

            <RadioGroup
                android:id="@+id/radio_group_split_through"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_start_1"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="@dimen/keyline_end_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_label_advanced_options">

                <RadioButton
                    android:id="@+id/radio_button_split"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/filter_tint"
                    android:drawableLeft="@drawable/ic_split_black_24dp"
                    android:drawablePadding="16dp"
                    android:layoutDirection="rtl"
                    android:minHeight="48dp"
                    android:text="@string/label_filter_split"
                    android:textColor="@color/filter_tint"
                    android:textSize="14sp"
                    tools:drawableTint="@color/filter_tint"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:id="@+id/text_info_split"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="48dp"
                    android:text="@string/info_filter_split"
                    android:textColor="@color/grey_dark"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/radio_button_through"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:buttonTint="@color/filter_tint"
                    android:drawableLeft="@drawable/ic_through_black_24dp"
                    android:drawablePadding="16dp"
                    android:layoutDirection="rtl"
                    android:minHeight="48dp"
                    android:text="@string/label_filter_through"
                    android:textColor="@color/filter_tint"
                    android:textSize="14sp"
                    tools:drawableTint="@color/filter_tint"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:id="@+id/text_info_through"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="48dp"
                    android:text="@string/info_filter_through"
                    android:textColor="@color/grey_dark"
                    android:textSize="12sp" />

            </RadioGroup>

            <View
                android:id="@+id/divider_4"
                style="@style/App.Widget.Divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radio_group_split_through" />

            <Button
                android:id="@+id/button_forget"
                style="@style/ButtonStyle.Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_start_2"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/keyline_end_2"
                android:layout_marginBottom="16dp"
                android:text="@string/action_forget_prefs"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_4"
                app:layout_constraintWidth_max="@dimen/max_width_button" />

            <ProgressBar
                android:id="@+id/progress_forget"
                style="@style/App.Widget.ProgressBar"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:elevation="2dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/button_forget"
                app:layout_constraintEnd_toEndOf="@+id/button_forget"
                app:layout_constraintStart_toStartOf="@+id/button_forget"
                app:layout_constraintTop_toTopOf="@+id/button_forget" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
