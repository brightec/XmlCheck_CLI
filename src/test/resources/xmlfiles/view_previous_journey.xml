<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.trainsplit.trainsplit.util.Utils"/>

        <variable
            name="viewModel"
            type="com.trainsplit.trainsplit.journeys.model.PreviousJourneyModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_travel_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@{Utils.getDatePastStringForDisplay(viewModel.getTravelDate())}"
            android:textColor="@color/grey_dark"
            android:textSize="14sp"
            tools:text="01 Jan 2017, 11:48" />

        <TextView
            android:id="@+id/text_stations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@{viewModel.getStations()}"
            android:textColor="@color/grey_mid_dark"
            android:textSize="14sp"
            tools:text="Brighton to Edinburgh" />

        <TextView
            android:id="@+id/text_cost_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@{viewModel.getCostDescription()}"
            android:textColor="@color/grey_mid_dark"
            android:textSize="12sp"
            tools:text="You spent £59.48 on this trip, we saved you £2.52" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorDivider" />

    </LinearLayout>
</layout>
