<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <import type="com.trainsplit.trainsplit.util.Utils"/>

        <variable
            name="ticket"
            type="com.trainsplit.trainsplit.journeyplanner.ticket.Ticket"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_ticket_stations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:focusable="true"
            android:text="@{ticket.getStations()}"
            android:textColor="@color/grey_dark"
            android:textSize="16sp"
            tools:text="Brighton to London Zones 1-6"/>

        <TextView
            android:id="@+id/text_ticket_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_ticket_stations"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:focusable="true"
            android:text="@{ticket.getName()}"
            android:textColor="@color/grey_dark"
            android:textSize="16sp"
            tools:text="Super Off-Peak Day Travelcard"/>

        <TextView
            android:id="@+id/text_railcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_ticket_name"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:focusable="true"
            android:text="@{@string/railcard(ticket.getRailcard())}"
            android:textColor="@color/grey_dark"
            android:textSize="16sp"
            android:visibility="@{ticket.getRailcard() != null ? View.VISIBLE : View.GONE}"
            tools:text="(16-25 Railcard)"/>

        <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_railcard"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:focusable="true"
            android:text="@{Utils.getCurrencyStringForDisplay(ticket.getPrice())}"
            android:textColor="@color/grey_mid_dark"
            android:textSize="14sp"
            tools:text="Price: Â£19.20"/>

        <TextView
            android:id="@+id/text_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_price"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:focusable="true"
            android:text="@{ticket.getFirstRouteFareNote()}"
            android:textColor="@color/grey_mid_dark"
            android:textSize="14sp"
            android:visibility="@{ticket.getFirstRouteFareNote() != null ? View.VISIBLE : View.GONE}"
            tools:text="Description: Travel is allowed via any permitted route."/>

        <TextView
            android:id="@+id/text_restriction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_description"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:focusable="true"
            android:text="@{@string/label_restrictions(ticket.getRestrictionCode())}"
            android:textColor="@color/grey_mid_dark"
            android:textSize="14sp"
            android:visibility="@{ticket.getRestrictionCode() != null ? View.VISIBLE : View.GONE}"
            tools:text="Restriction FB applies"/>

        <TextView
            android:id="@+id/text_tap_for_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_restriction"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/label_tap_details"
            android:textColor="@color/grey_mid_darker"
            android:textSize="14sp"/>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/text_tap_for_details"
            android:layout_marginStart="16dp"
            android:background="@color/colorDivider"/>

    </RelativeLayout>
</layout>