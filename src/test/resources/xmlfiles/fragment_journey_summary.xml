<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_outbound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_toStartOf="@+id/button_outbound_journey_legs"
                        android:textColor="@color/grey_dark"
                        android:textSize="14sp"
                        tools:text="@string/label_your_outward_journey" />

                    <Button
                        android:id="@+id/button_outbound_journey_legs"
                        style="@style/ButtonStyle.Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="@string/action_view_details" />

                </RelativeLayout>

                <com.trainsplit.trainsplit.journeyplanner.journey.JourneyView
                    android:id="@+id/view_outbound_ticket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:id="@+id/linear_return"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorDividerBlue" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text_return"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_toStartOf="@+id/button_return_journey_legs"
                            android:text="@string/label_your_return_journey"
                            android:textColor="@color/grey_dark"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/button_return_journey_legs"
                            style="@style/ButtonStyle.Text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:text="@string/action_view_details" />

                    </RelativeLayout>

                    <com.trainsplit.trainsplit.journeyplanner.journey.JourneyView
                        android:id="@+id/view_return_ticket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="16dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorDividerBlue" />

                <RelativeLayout
                    android:id="@+id/relative_important"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/white">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey_mid_light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_toStartOf="@+id/image_important_chevron"
                        android:text="@string/label_important_information"
                        android:textColor="@color/grey_dark"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/image_important_chevron"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_expand_24dp"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/text_important"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp"
                    android:textColor="@color/grey_mid_dark"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:text="@string/summary_info_non_advance"
                    tools:visibility="visible" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_mid_light" />

                <RelativeLayout
                    android:id="@+id/relative_tickets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_toStartOf="@+id/image_tickets_chevron"
                        android:text="@string/label_your_tickets"
                        android:textColor="@color/grey_dark"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/image_tickets_chevron"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_expand_24dp"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linear_tickets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/text_tickets_explained"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="@string/your_tickets_explained"
                        android:textColor="@color/grey_dark"
                        android:textSize="14sp"
                        tools:visibility="gone" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:background="@color/colorDivider"
                        tools:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/linear_outbound_tickets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical"
                        tools:minHeight="100dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_mid_light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkbox_reserve"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:checked="true"
                        android:minHeight="48dp"
                        android:text="@string/label_reserve_seat"
                        android:textColor="@color/grey_dark"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/button_reserve_choose"
                        style="@style/ButtonStyle.Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/action_choose_seat_preferences"
                        android:text="@string/action_choose" />

                </LinearLayout>

                <include
                    android:id="@+id/layout_summary"
                    layout="@layout/view_price_summary" />

                <Button
                    android:id="@+id/button_next"
                    style="@style/ButtonStyle.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/action_proceed_payment_details" />

            </LinearLayout>

        </ScrollView>

        <include
            android:id="@+id/layout_spinner"
            layout="@layout/view_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            tools:visibility="gone" />

    </RelativeLayout>

</layout>
