<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/blue_normal_lighter">

    <Button
        android:id="@+id/button_skip"
        style="@style/ButtonStyle.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top|end"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="@string/action_skip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_train"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/relative_information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription"
        tools:src="@drawable/img_onboarding_train" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager_images"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_images"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-4dp"
        app:layout_constraintBottom_toTopOf="@+id/relative_information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tabBackground="@drawable/pager_dot_selector"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blue_normal"
        app:layout_constraintBottom_toBottomOf="@+id/relative_information"
        app:layout_constraintEnd_toEndOf="@+id/relative_information"
        app:layout_constraintStart_toStartOf="@+id/relative_information"
        app:layout_constraintTop_toTopOf="@+id/relative_information" />

    <RelativeLayout
        android:id="@+id/relative_information"
        android:layout_width="0dp"
        android:layout_height="162dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Did you know?" />

        <TextView
            android:id="@+id/text_information"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_below="@+id/text_title"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:scrollbars="vertical"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:text="By simply splitting your train journey across two or more tickets, you can save money on your next trip." />

        <Button
            android:id="@+id/button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_information"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="4dp"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:background="@null"
            tools:gravity="bottom|end"
            tools:text="@string/action_next"
            tools:textColor="@color/white" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
