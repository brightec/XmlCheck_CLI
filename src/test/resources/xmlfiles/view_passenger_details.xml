<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_passenger_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="160dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_title_passenger_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_passenger_24dp"
                android:gravity="center_vertical"
                android:text="@string/label_passenger_details"
                android:textColor="@color/grey_dark"
                android:textSize="16sp"/>

            <RelativeLayout
                android:id="@+id/relative_adults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_title_passenger_details"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp">

                <TextView
                    android:id="@+id/text_label_adults"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/counter_adults"
                    android:gravity="center_vertical"
                    android:text="@string/label_adults"
                    android:textColor="@color/grey_dark"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"/>

                <com.trainsplit.trainsplit.widgets.CounterView
                    android:id="@+id/counter_adults"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:counterTitle="@string/label_number_of_adults"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_children"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_adults"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/text_label_children"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/counter_children"
                    android:gravity="center_vertical"
                    android:text="@string/label_children"
                    android:textColor="@color/grey_dark"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/text_info_children"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/text_label_children"
                    android:layout_marginTop="8dp"
                    android:layout_toStartOf="@+id/counter_children"
                    android:gravity="center_vertical"
                    android:text="@string/info_child_criteria"
                    android:textColor="@color/grey_mid_dark"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/text_error_passengers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_info_children"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/magenta_normal"
                    android:textSize="12sp"
                    tools:visibility="gone"
                    tools:text="You can only book up to 8 passengers at a time"/>

                <com.trainsplit.trainsplit.widgets.CounterView
                    android:id="@+id/counter_children"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    app:counterTitle="@string/label_number_of_children"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:id="@+id/view_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relative_children"
                android:layout_marginTop="24dp"
                android:background="@color/colorDivider"/>

            <Button
                android:id="@+id/button_add_railcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_divider"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_add_green_24dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="@string/action_add_railcard"
                android:textAllCaps="false"
                android:textColor="@color/grey_dark"
                android:textSize="16sp"
                android:textStyle="normal"/>

            <ProgressBar
                android:id="@+id/progress_railcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/button_add_railcard"
                android:layout_alignTop="@+id/button_add_railcard"
                android:layout_alignBottom="@+id/button_add_railcard"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/text_info_railcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_add_railcard"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="56dp"
                android:gravity="center_vertical"
                android:text="@string/info_railcard"
                android:textColor="@color/grey_mid_dark"
                android:textSize="12sp"/>

            <View
                android:id="@+id/view_divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/text_info_railcard"
                android:layout_marginTop="16dp"
                android:background="@color/colorDivider"/>

            <Button
                android:id="@+id/button_next"
                style="@style/ButtonStyle.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_divider2"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="@string/action_find_best_tickets"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>
