<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="@dimen/results_bar_width"
                                                   android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        tools:layout_constraintGuide_percent="0.2"/>

    <View
        android:id="@+id/view_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        app:layout_constraintBottom_toTopOf="@+id/text_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_bar"
        tools:background="@drawable/search_result_bar_normal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_station_cost"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        tools:layout_constraintGuide_percent="0.05"/>

    <View
        android:id="@+id/view_station_cost_line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@drawable/dashed_line"
        android:layerType="software"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_station_cost"/>

    <View
        android:id="@+id/view_slow_indicator"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:background="@color/yellow_normal"
        app:layout_constraintBottom_toBottomOf="@+id/view_bar"
        app:layout_constraintEnd_toEndOf="@+id/view_bar"
        app:layout_constraintStart_toStartOf="@+id/view_bar"/>

    <TextView
        android:id="@+id/text_cost_prefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/text_ticket_cost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="From:"
        tools:textColor="@color/grey_mid_dark"/>

    <TextView
        android:id="@+id/text_ticket_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Â£99.99"/>

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:gravity="top|center_horizontal"
        android:lineSpacingExtra="-4sp"
        android:textColor="@color/grey_dark"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="12:21\n-\n13:35"/>

</androidx.constraintlayout.widget.ConstraintLayout>
