<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <com.trainsplit.trainsplit.widgets.DashedLineView
        android:id="@+id/line_dash_1"
        android:layout_width="2dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line_stop_1"
        android:layout_width="24dp"
        android:layout_height="2dp"
        android:background="@color/grey_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_dash_1" />

    <TextView
        android:id="@+id/text_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/keyline_start_1"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/keyline_end_1"
        android:gravity="center"
        android:textColor="@color/grey_dark"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_stop_1"
        tools:text="Some information that needs to be conveyed" />

    <View
        android:id="@+id/line_stop_2"
        android:layout_width="24dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/grey_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_info" />

    <com.trainsplit.trainsplit.widgets.DashedLineView
        android:id="@+id/line_dash_2"
        android:layout_width="2dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_stop_2" />

</merge>
