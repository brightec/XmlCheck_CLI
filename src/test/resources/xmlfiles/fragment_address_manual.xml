<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        style="@style/App.Widget.AppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/App.Widget.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:title="@string/title_address" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_label_country"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_start_1"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:gravity="center_vertical"
                android:text="@string/label_country"
                android:textColor="@color/grey_dark"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/spinner_country"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="@+id/text_label_country"
                app:layout_constraintStart_toStartOf="@+id/text_label_country"
                app:layout_constraintTop_toBottomOf="@+id/text_label_country"
                tools:listitem="@layout/item_spinner" />

            <View
                android:id="@+id/underline_country"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="-8dp"
                android:layout_weight="5"
                android:background="@color/blue_dark_70"
                app:layout_constraintEnd_toEndOf="@+id/spinner_country"
                app:layout_constraintStart_toStartOf="@+id/spinner_country"
                app:layout_constraintTop_toBottomOf="@+id/spinner_country" />

            <TextView
                android:id="@+id/text_info_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/spinner_country"
                app:layout_constraintTop_toBottomOf="@+id/underline_country"
                tools:text="Info info info info info" />

            <com.trainsplit.trainsplit.widgets.TextInputWidget
                android:id="@+id/text_input_country_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_start_1"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:inputType="textNoSuggestions|textCapWords"
                android:visibility="gone"
                app:hint="@string/hint_please_enter"
                app:label="@string/label_address1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_info_country"
                app:required="true"
                tools:visibility="visible" />

            <View
                android:id="@+id/divider"
                style="@style/App.Widget.Divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_input_country_code" />

            <com.trainsplit.trainsplit.widgets.TextInputWidget
                android:id="@+id/text_input_address1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_start_1"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:inputType="textNoSuggestions|textCapWords"
                app:hint="@string/hint_please_enter"
                app:label="@string/label_address1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                app:required="true"
                tools:visibility="visible" />

            <com.trainsplit.trainsplit.widgets.TextInputWidget
                android:id="@+id/text_input_address2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_start_1"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:inputType="textNoSuggestions|textCapWords"
                app:hint="@string/hint_please_enter"
                app:label="@string/label_address2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_input_address1"
                app:required="false"
                tools:visibility="visible" />

            <com.trainsplit.trainsplit.widgets.TextInputWidget
                android:id="@+id/text_input_address3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_start_1"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:inputType="textNoSuggestions|textCapWords"
                app:hint="@string/hint_please_enter"
                app:label="@string/label_address3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_input_address2"
                app:required="false"
                tools:visibility="visible" />

            <com.trainsplit.trainsplit.widgets.TextInputWidget
                android:id="@+id/text_input_address4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_start_1"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:inputType="textNoSuggestions|textCapWords"
                app:hint="@string/hint_please_enter"
                app:label="@string/label_address4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_input_address3"
                app:required="false"
                tools:visibility="visible" />

            <com.trainsplit.trainsplit.widgets.TextInputWidget
                android:id="@+id/text_input_address5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_start_1"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:inputType="textNoSuggestions|textCapWords"
                app:hint="@string/hint_please_enter"
                app:label="@string/label_address5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_input_address4"
                app:required="false"
                tools:visibility="visible" />

            <com.trainsplit.trainsplit.widgets.TextInputWidget
                android:id="@+id/text_input_postcode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/keyline_start_1"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="@dimen/keyline_end_1"
                android:layout_marginBottom="16dp"
                android:inputType="textCapCharacters|textNoSuggestions"
                app:hint="@string/hint_please_enter"
                app:label="@string/label_postcode"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_input_address5"
                app:required="true" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_done"
        style="@style/ButtonStyle.Fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/action_find_address"
        app:layout_anchor="@+id/scroll_content"
        app:layout_anchorGravity="bottom|end"
        app:srcCompat="@drawable/ic_done_black_24dp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
