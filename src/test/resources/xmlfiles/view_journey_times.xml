<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_journey_times"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="160dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true">

            <TextView
                android:id="@+id/text_title_outbound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_outward_24dp"
                android:gravity="center_vertical"
                android:text="@string/label_outbound_journey"
                android:textColor="@color/grey_dark"
                android:textSize="16sp"/>

            <com.trainsplit.trainsplit.widgets.DaabSelectionView
                android:id="@+id/selection_outbound_daab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/text_title_outbound"
                android:layout_below="@+id/text_title_outbound"
                android:layout_marginStart="24dp"/>

            <Button
                android:id="@+id/button_outbound_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/selection_outbound_daab"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:background="@null"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_calendar_24dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="@string/hint_pick_date"
                android:textAllCaps="false"
                android:textColor="@color/blue_dark_70"
                android:textSize="16sp"/>

            <Button
                style="@style/ButtonStyle.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/button_outbound_date"
                android:layout_alignEnd="@+id/button_outbound_date"
                android:layout_alignTop="@+id/button_outbound_date"
                android:clickable="false"
                android:importantForAccessibility="no"
                android:paddingEnd="0dp"
                android:paddingStart="0dp"
                android:text="@string/action_change"/>

            <TextView
                android:id="@+id/text_outbound_date_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_outbound_date"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/magenta_normal"
                android:textSize="12sp"
                android:visibility="gone"
                tools:text="Please input a valid date"/>

            <Button
                android:id="@+id/button_outbound_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_outbound_date_error"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:background="@null"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_time_24dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="@string/hint_pick_time"
                android:textAllCaps="false"
                android:textColor="@color/blue_dark_70"
                android:textSize="16sp"/>

            <Button
                style="@style/ButtonStyle.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/button_outbound_time"
                android:layout_alignEnd="@+id/button_outbound_time"
                android:layout_alignTop="@+id/button_outbound_time"
                android:clickable="false"
                android:importantForAccessibility="no"
                android:paddingEnd="0dp"
                android:paddingStart="0dp"
                android:text="@string/action_change"/>

            <TextView
                android:id="@+id/text_outbound_time_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_outbound_time"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/magenta_normal"
                android:textSize="12sp"
                android:visibility="gone"
                tools:text="Please input a valid time"/>

            <View
                android:id="@+id/view_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/text_outbound_time_error"
                android:layout_marginTop="16dp"
                android:background="@color/colorDivider"/>

            <RelativeLayout
                android:id="@+id/relative_return_journey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_divider"
                android:animateLayoutChanges="true">

                <Button
                    android:id="@+id/button_add_return"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="6dp"
                    android:background="@null"
                    android:drawablePadding="16dp"
                    android:drawableStart="@drawable/ic_add_green_24dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:text="@string/action_add_return"
                    android:textAllCaps="false"
                    android:textColor="@color/grey_dark"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    tools:visibility="visible"/>

                <RelativeLayout
                    android:id="@+id/relative_return_journey_times"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    tools:visibility="gone">

                    <TextView
                        android:id="@+id/text_title_return"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_toStartOf="@+id/button_clear_return"
                        android:drawablePadding="16dp"
                        android:drawableStart="@drawable/ic_return_arrow_grey_dark_24dp"
                        android:gravity="center_vertical"
                        android:text="@string/label_return_journey"
                        android:textColor="@color/grey_dark"
                        android:textSize="16sp"/>

                    <com.trainsplit.trainsplit.widgets.DaabSelectionView
                        android:id="@+id/selection_return_daab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/text_title_return"
                        android:layout_below="@+id/text_title_return"
                        android:layout_marginStart="24dp"/>

                    <ImageButton
                        android:id="@+id/button_clear_return"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:background="@null"
                        android:contentDescription="@string/action_clear_return"
                        android:src="@drawable/ic_clear_black_24dp"
                        android:tint="@color/blue_normal"/>

                    <Button
                        android:id="@+id/button_return_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/selection_return_daab"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        android:background="@null"
                        android:drawablePadding="16dp"
                        android:drawableStart="@drawable/ic_calendar_24dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:text="@string/hint_pick_date"
                        android:textAllCaps="false"
                        android:textColor="@color/blue_dark_70"
                        android:textSize="16sp"/>

                    <Button
                        style="@style/ButtonStyle.Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/button_return_date"
                        android:layout_alignEnd="@+id/button_return_date"
                        android:layout_alignTop="@+id/button_return_date"
                        android:clickable="false"
                        android:importantForAccessibility="no"
                        android:paddingEnd="0dp"
                        android:paddingStart="0dp"
                        android:text="@string/action_change"/>

                    <TextView
                        android:id="@+id/text_return_date_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/button_return_date"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/magenta_normal"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:text="Please input a valid date"/>

                    <Button
                        android:id="@+id/button_return_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_return_date_error"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:background="@null"
                        android:drawablePadding="16dp"
                        android:drawableStart="@drawable/ic_time_24dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:text="@string/hint_pick_time"
                        android:textAllCaps="false"
                        android:textColor="@color/blue_dark_70"
                        android:textSize="16sp"/>

                    <Button
                        style="@style/ButtonStyle.Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/button_return_time"
                        android:layout_alignEnd="@+id/button_return_time"
                        android:layout_alignTop="@+id/button_return_time"
                        android:clickable="false"
                        android:importantForAccessibility="no"
                        android:paddingEnd="0dp"
                        android:paddingStart="0dp"
                        android:text="@string/action_change"/>

                    <TextView
                        android:id="@+id/text_return_time_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/button_return_time"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/magenta_normal"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:text="Please input a valid time"/>

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/view_divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relative_return_journey"
                android:layout_marginTop="6dp"
                android:background="@color/colorDivider"/>

            <Button
                android:id="@+id/button_next"
                style="@style/ButtonStyle.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_divider2"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="@string/action_add_passengers"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>
