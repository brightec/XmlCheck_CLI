<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <import type="com.trainsplit.trainsplit.util.Utils"/>

        <variable
            name="model"
            type="com.trainsplit.trainsplit.journeyplanner.journey.JourneyModel"/>
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/relative_header"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_toStartOf="@+id/text_changes"
                android:text="@{model.getDate() != null ? Utils.getDateStringForDisplay(model.getDate()) : null}"
                android:textColor="@color/grey_dark"
                android:textSize="14sp"
                tools:text="Fri 24th Nov"/>

            <TextView
                android:id="@+id/text_changes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/relative_header"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:drawablePadding="8dp"
                android:drawableStart="@{model.isCheapest() ? @drawable/ic_changes_cheapest_18dp : @drawable/ic_changes_default_18dp}"
                android:text="@{@plurals/number_changes(model.getNumChanges(), model.getNumChanges())}"
                android:textColor="@color/grey_dark"
                android:textSize="14sp"
                tools:drawableStart="@drawable/ic_changes_cheapest_18dp"
                tools:text="3 changes"/>

            <com.trainsplit.trainsplit.journeyplanner.journey.JourneyLineView
                android:id="@+id/journey_line"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/text_changes"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:model="@{model}"/>

            <TextView
                android:id="@+id/text_longest_wait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/view_journey_line"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_toStartOf="@+id/text_slow_route"
                android:text="@{@plurals/longest_wait(model.getLongestWait(), model.getLongestWait())}"
                android:textColor="@color/grey_dark"
                android:textSize="14sp"
                android:visibility="@{model.getNumChanges() > 0 ? View.VISIBLE : View.GONE}"
                tools:text="Longest wait: 21 mins"/>

            <TextView
                android:id="@+id/text_journey_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text_longest_wait"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_toStartOf="@+id/text_slow_route"
                android:text="@{@string/journey_time(model.getJourneyTime())}"
                android:textColor="@color/grey_dark"
                android:textSize="14sp"
                android:visibility="@{model.getJourneyLength() > 0 ? View.VISIBLE : View.GONE}"
                tools:text="Total Journey Time: 6h 34m"/>

            <TextView
                android:id="@+id/text_slow_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/view_journey_line"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/label_slow_route"
                android:textColor="@color/grey_dark"
                android:textSize="14sp"
                android:visibility="@{model.isSlowJourney() ? View.VISIBLE : View.GONE}"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="4dp"
                android:layout_alignBottom="@+id/text_slow_route"
                android:layout_alignEnd="@+id/text_slow_route"
                android:layout_alignStart="@+id/text_slow_route"
                android:layout_marginBottom="-4dp"
                android:background="@color/yellow_normal"
                android:visibility="@{model.isSlowJourney() ? View.VISIBLE : View.GONE}"/>

            <RelativeLayout
                android:id="@+id/relative_header"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@{model.isCheapest() ? @color/green_normal : @color/blue_light, default=@color/green_normal}">

                <TextView
                    android:id="@+id/text_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:text="@{model.getLabel()}"
                    android:textAllCaps="true"
                    android:textColor="@{model.isCheapest() ? @color/white : @color/grey_dark, default=@color/white}"
                    android:textSize="14sp"
                    tools:text="Out"/>

                <TextView
                    android:id="@+id/text_price_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/text_label"
                    android:paddingEnd="@{model.getPriceLabel() == null ? @dimen/zero : @dimen/two, default=@dimen/zero}"
                    android:paddingStart="@{model.getLabel() == null ? @dimen/zero : @dimen/eight, default=@dimen/zero}"
                    android:text="@{model.getPriceLabel()}"
                    android:textColor="@{model.isCheapest() ? @color/white : @color/grey_dark, default=@color/white}"
                    android:textSize="12sp"
                    tools:text="From: "/>

                <TextView
                    android:id="@+id/text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/text_price_label"
                    android:text="@{Utils.getCurrencyStringForDisplay(model.getTotalPrice())}"
                    android:textColor="@{model.isCheapest() ? @color/white : @color/grey_dark, default=@color/white}"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="@{model.getTotalPrice() > 0 ? View.VISIBLE : View.GONE}"
                    tools:ignore="RtlSymmetry"
                    tools:text="£59.48"/>

                <TextView
                    android:id="@+id/text_saving"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@id/text_price"
                    android:layout_toStartOf="@+id/relative_selected"
                    android:text="@{@string/ticket_saving(Utils.getCurrencyStringForDisplay(model.getSaving()))}"
                    android:textColor="@{model.isCheapest() ? @color/white : @color/blue_normal, default=@color/white}"
                    android:textSize="14sp"
                    android:visibility="@{model.getSaving() > 0 ? View.VISIBLE : View.GONE}"
                    tools:text="(Saves £2.52)"/>

                <RelativeLayout
                    android:id="@+id/relative_selected"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:background="@color/blue_normal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:drawableEnd="@drawable/ic_selected_tick_24dp"
                        android:drawablePadding="2dp"
                        android:gravity="center_vertical"
                        android:text="@string/label_selected"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>

                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/bg_ticket_view"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>
